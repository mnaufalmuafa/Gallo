<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoard">

    <TextView
        android:id="@+id/TVGallo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gallo"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/TVKeterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gallo memberikan layanan untuk membeli galon via delivery. Percayakan kebutuhan galon kalian dengan Gallo"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/TVGallo"/>

    <ImageView
        android:id="@+id/IVMainDashboard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/logo_header_gallo"
        android:scaleType="matrix"
        android:layout_marginTop="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/TVKeterangan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/IVMainDashboard">

        <Button
            android:id="@+id/BtnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sign Up"
            android:textColor="@color/yellow"
            android:background="@color/colorPrimary"
            android:textAllCaps="false"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"/>

        <Button
            android:id="@+id/BtnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/yellow"
            android:background="@color/colorPrimary"
            android:text="Login"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setujui syarat dan ketentuan layanan Gallo"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/LL" />

</androidx.constraintlayout.widget.ConstraintLayout>